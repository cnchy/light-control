<view><block wx:for="{{lights}}" wx:for-item="light" wx:for-index="index" wx:key="id"><view class="panel"><button type="primary" data-event-opts="{{[['tap',[['select',['$0'],[[['lights','id',light.id]]]]]]]}}" bindtap="__e">{{"选中"+light.id+"号灯"}}</button></view></block><block wx:if="{{currentLight!=null}}"><view>红色<slider min="0" max="999" value="{{currentLight.info.R}}" show-value="true" data-event-opts="{{[['change',[['changeR',['$event','$0'],['currentLight']]]]]}}" bindchange="__e"></slider>绿色<slider min="0" max="999" value="{{currentLight.info.G}}" show-value="true" data-event-opts="{{[['change',[['changeG',['$event','$0'],['currentLight']]]]]}}" bindchange="__e"></slider>蓝色<slider min="0" max="999" value="{{currentLight.info.B}}" show-value="true" data-event-opts="{{[['change',[['changeB',['$event','$0'],['currentLight']]]]]}}" bindchange="__e"></slider>暖度<slider min="0" max="999" value="{{currentLight.info.H}}" show-value="true" data-event-opts="{{[['change',[['changeH',['$event','$0'],['currentLight']]]]]}}" bindchange="__e"></slider>冷度<slider min="0" max="999" value="{{currentLight.info.L}}" show-value="true" data-event-opts="{{[['change',[['changeL',['$event','$0'],['currentLight']]]]]}}" bindchange="__e"></slider>整体亮度<slider min="0" max="999" value="{{currentLight.info.A}}" show-value="true" data-event-opts="{{[['change',[['changeA',['$event','$0'],['currentLight']]]]]}}" bindchange="__e"></slider>角度<slider min="0" max="999" value="{{currentLight.info.D}}" show-value="true" data-event-opts="{{[['change',[['changeD',['$event','$0'],['currentLight']]]]]}}" bindchange="__e"></slider>开关<switch checked="{{currentLight.onOff}}" data-event-opts="{{[['change',[['onOffLight',['$event','$0'],['currentLight']]]]]}}" bindchange="__e"></switch></view></block><button type="primary" data-event-opts="{{[['tap',[['connect']]]]}}" bindtap="__e">连接</button><button type="primary" data-event-opts="{{[['tap',[['send']]]]}}" bindtap="__e">确定修改</button></view>